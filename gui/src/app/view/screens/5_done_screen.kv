<DoneScreen>:
    banner_container: banner_container
    canvas:
        Color:
            rgba: 0, 0, 0, 0
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 9
            Label:
                size_hint: 1, 8
                text: "Saved!"
                font_size: 60
            BoxLayout:
                id: banner_container
                size_hint: 1, 4
                valign: "bottom"
                orientation: "vertical"
                padding: [20, 0, 20, 20]
                spacing: 20
#                BoxedAlertBanner:
#                    text: "Check Internet!"
#                BoxedAlertBanner:
#                    text: "Check Scale!"
#                BoxedAlertBanner:
#                    text: "Check Ping!"

        Button:
            size_hint: 1, 3
            text: "Finish"
            font_size: 60
            on_press:
                root.pressed_finish()
