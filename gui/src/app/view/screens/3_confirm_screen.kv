#: import BoxedLabel app.view.view

<ConfirmScreen>:
    canvas:
        Color:
            rgba: 0, 1, 0, 0
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 9
            orientation: "vertical"
            padding: [100, 150, 100, 0]
            spacing: 0
            Label:
                canvas:
                    Color:
                        rgba: 1, 0, 0, 0.5
                    Rectangle
                        size: self.size
                        pos: self.pos
                size_hint: 1, 0.4
                text: root.category
                font_size: 60
                bold: True
            BoxedLabel:
                padding: [100, 100, 100, 0]
                orientation: "vertical"
                size_hint: 1, 1
                Label:
                    text: str(root.total)
                    text_size: self.parent.size
                    valign: 'middle'
                    halign: "center"
                    font_size: 150
                    bold: True
                Label:
                    text: "lbs"
                    text_size: self.size
                    valign: 'top'
                    halign: "center"
                    font_size: 60
                    bold: True
            BoxLayout:
                orientation: "vertical"
                size_hint: 1, 1
                padding: [0, 50, 0, 0]
                Label:
                    size_hint: 1, 1
                    text_size: self.size
                    valign: 'top'
                    halign: 'center'
                    text: "Final Load"
                    font_size: 90
                    bold: True
        BoxLayout:
            padding: [20, 0, 20, 20]
            size_hint: 1, 3
            orientation: "horizontal"
            spacing: 20
            Button:
                text: "More"
                font_size: 60
                on_press:
                    root.pressed_more()
            Button:
                text: "Accept"
                font_size: 60
                on_press:
                    root.pressed_finish()