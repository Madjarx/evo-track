#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import BoxedLabel app.view.view

<InteractScreen>:
    canvas:
        Color:
            rgba: 0, 1, 0, 0
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 9
            orientation: "vertical"
            padding: [100, 150, 100, 0]
            spacing: 0
            Label:
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1
                    Rectangle
                        size: self.size
                        pos: self.pos
                size_hint: 1, 1
                text: root.category
                font_size: 100
                bold: True
            BoxedLabel:
                padding: [20, 20, 20, 20]
                orientation: "vertical"
                size_hint: 1, 3
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1, 0.7
                    Label:
                        canvas.before:
                            Color:
                                rgba: 0, 0, 1, 1
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        size_hint: 1, 1
                        text_size: self.size
                        text: "Scale Reading"
                        font_size: 60
                        valign: "middle"
                        halign: "center"
                        bold: True
                    Label:
                        canvas.before:
                            Color:
                                rgba: 0.2, 0.2, 1, 1
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        size_hint: 0.2, 1
                        text_size: self.size
                        text: str(root.units)
                        font_size: 50
                        valign: "middle"
                        halign: "center"
                Label:
                    size_hint: 1, 1
                    text: str(root.weight)
                    text_size: self.parent.size
                    valign: 'middle'
                    halign: "center"
                    font_size: 130
                    bold: True
                BoxedLabel:
                    padding: [20, 20, 20, 0]
                    orientation: "vertical"
                    size_hint: 1, 1
                    Label:
                        canvas.before:
                            Color:
                                rgba: 0, 0, 1, 1
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        size_hint: 1, 0.3
                        text_size: self.size
                        text: "Total"
                        font_size: 60
                        valign: "middle"
                        halign: "center"
                        bold: True
                    Label:
                        size_hint: 1, 0.5
                        text: str(root.total)
                        text_size: self.parent.size
                        valign: 'middle'
                        halign: "center"
                        font_size: 75
                        bold: True
            BoxLayout:
                orientation: "vertical"
                size_hint: 1, 1
                padding: [0, 50, 0, 0]
                Label:
                    size_hint: 1, 1
                    text_size: self.size
                    valign: 'top'
                    halign: 'center'
                    text: "Load #" + str(root.quantity)
                    font_size: 60
                    bold: True
        BoxLayout:
            orientation: "horizontal"
            spacing: 20
            padding: [20, 0, 20, 20]
            size_hint: 1, 3
            Button:
                size_hint: 1, 1
                text: "Reset"
                font_size: 60
                on_press:
                    root.pressed_reset()
#                on_press:
#                    root.transition: FadeTransition(direction='left')
#                self.parent.parent.parent.parent.transition.direction = 'left'
            Button:
                size_hint: 1, 1
                text: "More"
                font_size: 60
                on_press:
                    root.pressed_more()
            Button:
                size_hint: 1, 1
                text: "Done"
                font_size: 60
                on_press:
                    root.pressed_accept()
#                    root.accept(root.weight)